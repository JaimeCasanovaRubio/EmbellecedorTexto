<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="201.0" prefWidth="206.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aplicacion.practica3_jaimecasanova.controllers.BotonesController">
   <children>
      <VBox prefHeight="186.0" prefWidth="206.0">
         <children>
            <Label fx:id="labelEstilo" alignment="CENTER" contentDisplay="CENTER" text="Cambio de Estilo">
               <padding>
                  <Insets left="60.0" top="10.0" />
               </padding>
            </Label>
            <Button fx:id="btnNegrita" layoutX="60.0" mnemonicParsing="false" onAction="#clickNegrita" text="Negrita">
               <VBox.margin>
                  <Insets left="75.0" top="15.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnCursiva" mnemonicParsing="false" onAction="#clickCursiva" text="Cursiva">
               <VBox.margin>
                  <Insets left="75.0" top="15.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnInvertir" mnemonicParsing="false" onAction="#clickInvertir" text="Invertir">
               <VBox.margin>
                  <Insets left="75.0" top="15.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnTamanno" mnemonicParsing="false" onAction="#clickTamanno" text="Mayus/Minus">
               <VBox.margin>
                  <Insets left="60.0" top="15.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
